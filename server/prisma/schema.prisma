datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  tags      Tag[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Prediction {
  className String?
  createdAt DateTime @default(now())
  geometry  String?
  id        String   @id @default(cuid())
  imageName String?
  lat       Float?
  lon       Float?
  score     Float?
  tag       Tag?     @relation(fields: [tagId], references: [id])
  tagId     String?
  tileName  String?
  updatedAt DateTime @updatedAt
  x         Float?
  xmax1     Float?
  xmin1     Float?
  y         Float?
  ymax      Float?
  ymin      Float?
}

model Tag {
  className  EnumTagClassName
  createdAt  DateTime         @default(now())
  id         String           @id @default(cuid())
  prediction Prediction
  updatedAt  DateTime         @updatedAt
  user       User             @relation(fields: [userId], references: [id])
  userId     String
}

enum EnumTagClassName {
  Pylon
  Tower
  Tank
  Building
  Building_Steeple
  Bridge
  Sign
  Windmill
  Storage_Structure
  Tank_WaterTower
  SmokeStack
  Industrial_Plant
  Crane
}